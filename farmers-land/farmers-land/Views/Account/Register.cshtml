@model farmers_land.Models.RegisterViewModel
   
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="row">
        <div class="col-sm-2"></div>

        <div class="col-sm-8">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.FirstName)
                        <div>
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @tabindex = "1" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Username)
                        <div>
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @tabindex = "3" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address)
                        <div>
                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @tabindex = "5" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        <div>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @tabindex = "6" })
                        </div>
                    </div>
                   
                </div>

                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.LastName)
                        <div>
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @tabindex = "2" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email)
                        <div>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @tabindex = "4" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserRole)
                        <div>
                            @Html.DropDownList("UserRole", (IEnumerable<SelectListItem>)ViewBag.Roles, "Select ...")
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword)
                        <div>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @tabindex = "7" })
                        </div>
                    </div>

                </div>                
            </div>
            <div class="row">
                <div class="col-sm-9"></div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <div >
                            <input type="submit" class="btn btn-default" value="Register" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-2"></div>
    </div>
   
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
